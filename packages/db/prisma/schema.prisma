generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @default(uuid()) @id
  email       String   @unique
  password    String
  name        String
  photo       String?
  rooms       Room[]
  chats       Chat[]
}

model Room {
  id          Int @default(autoincrement()) @id
  slug        String   @unique
  adminId     String
  users       User   @relation(fields: [adminId], references: [id])
  chats       Chat[]  
  createdAt   DateTime  @default(now())
}

model Chat {
  id          Int @default(autoincrement()) @id
  message     String
  roomId      Int
  room        Room @relation(fields: [roomId], references: [id])
  userId      String
  user        User  @relation(fields: [userId], references: [id])
}